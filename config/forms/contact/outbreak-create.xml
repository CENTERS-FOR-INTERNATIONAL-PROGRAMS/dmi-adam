        </translation>
      </itext>
      <instance>
        <data id="contact:outbreak:create" prefix="J1!contact:outbreak:create!" delimiter="#" version="2023-10-20 7-47">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <user>
              <contact_id/>
              <facility_id/>
              <name/>
            </user>
          </inputs>
          <outbreak>
            <parent>PARENT</parent>
            <type/>
            <name/>
            <description/>
            <code/>
            <external_id/>
            <meta tag="hidden">
              <created_by/>
              <created_by_person_uuid/>
              <created_by_place_uuid/>
            </meta>
          </outbreak>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </data>
      </instance>
      <bind nodeset="/data/inputs" relevant="false()"/>
      <bind nodeset="/data/inputs/user/contact_id" type="string"/>
      <bind nodeset="/data/inputs/user/facility_id" type="string"/>
      <bind nodeset="/data/inputs/user/name" type="string"/>
      <bind nodeset="/data/outbreak/parent" type="string"/>
      <bind nodeset="/data/outbreak/type" type="string"/>
      <bind nodeset="/data/outbreak/name" type="string" required="true()"/>
      <bind nodeset="/data/outbreak/description" type="string"/>
      <bind nodeset="/data/outbreak/code" type="string"/>
      <bind nodeset="/data/outbreak/external_id" type="string"/>
      <bind nodeset="/data/outbreak/meta/created_by" type="string" calculate="../../../inputs/user/name"/>
      <bind nodeset="/data/outbreak/meta/created_by_person_uuid" type="string" calculate="../../../inputs/user/contact_id"/>
      <bind nodeset="/data/outbreak/meta/created_by_place_uuid" type="string" calculate="../../../inputs/user/facility_id"/>
      <bind nodeset="/data/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group ref="/data/inputs">
      <group ref="/data/inputs/user">
        <input ref="/data/inputs/user/contact_id"/>
        <input ref="/data/inputs/user/facility_id"/>
        <input ref="/data/inputs/user/name"/>
      </group>
    </group>
    <group appearance="field-list" ref="/data/outbreak">
      <input ref="/data/outbreak/name">
        <label ref="jr:itext('/data/outbreak/name:label')"/>
      </input>
      <input ref="/data/outbreak/description">
        <label ref="jr:itext('/data/outbreak/description:label')"/>
      </input>
      <input ref="/data/outbreak/code">
        <label ref="jr:itext('/data/outbreak/code:label')"/>
      </input>
      <group appearance="hidden" ref="/data/outbreak/meta"/>
    </group>
  </h:body>
</h:html>
